<Window x:Class="SpaceSimGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceSimGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Height="50" Width="200" Name="StartKnapp" Click="StartKnapp_OnClick">Start Sim</Button>
        <Button Height="30" Width="100" VerticalAlignment="Bottom" Margin="5" Name="AddPlanets" Visibility="Hidden" 
        Click="AddPlanets_OnClick">Add Planets</Button>
        <Button Height="30" Width="100" VerticalAlignment="Bottom" Margin="5" Name="AddMoons" Visibility="Hidden" 
                Click="AddMoons_OnClick">Add Moons</Button>
        <Canvas Margin="10,10,10,10" Name="SimCanvas">
            
        </Canvas>
    </Grid>
</Window>
