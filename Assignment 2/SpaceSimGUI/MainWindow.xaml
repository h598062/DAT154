<Window x:Class="SpaceSimGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceSimGUI"
        mc:Ignorable="d"
        Name="SpaceSimWindow"
        Title="Space Simulator" Height="1200" Width="1200" ResizeMode="NoResize">
    <Grid Name="MainGrid">
        <Canvas Margin="5" Name="MainCanvas" Width="1150" Height="1150" Background="LightGray"></Canvas>
        <Canvas Margin="5" Name="PlanetCanvas" Width="1150" Height="1150" Background="LightGray" 
        Visibility="Hidden"></Canvas >
        <Button Height="30" Width="100" Name="StartKnapp" Margin="10" VerticalAlignment="Center" 
        Click="StartKnapp_OnClick">Start Sim</Button>
    </Grid>
</Window>
